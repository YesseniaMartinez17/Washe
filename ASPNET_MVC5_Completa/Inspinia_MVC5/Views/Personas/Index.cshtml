@model IEnumerable<Inspinia_MVC5.Models.tbPersonas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Clientes registrados:</h5>

                    <div class="ibox-tools">
                        @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.per_Identidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.per_Nombres)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.per_Apellidos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.per_FechaNacimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.per_Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.per_CorreoElectronico)
                            </th>

                            <th>Acciones</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.per_Identidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.per_Nombres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.per_Apellidos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.per_FechaNacimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.per_Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.per_CorreoElectronico)
                                </td>

                                <td>

                                    @*@Html.ActionLink("Detalles", "Details", new {id = item.per_Id} , new { @class = "btnDetails btn  btn-primary btn-sm",data_value=@item.per_Id })*@
                                    <a type="button" class="btnDetails btn  btn-primary btn-sm" data-value="@item.per_Id" id="item.per_Id" href="#">Detalles</a>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.per_Id }, new { @class = "btn btn-white btn-sm" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.per_Id }, new { @class = "btn btn-white btn-sm" })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="ModalDetalles" tabindex="-1" role="dialog" aria-labelledby="DetallandoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="contenidoIndex">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jquery");
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/app/General/Personas");
}


