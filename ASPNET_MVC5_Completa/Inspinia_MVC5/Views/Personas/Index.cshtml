@model IEnumerable<Inspinia_MVC5.Models.tbPersonas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Catalogo de clientes</h2>
        @*<ol class="breadcrumb">
            <li class="active">
                <strong>tbPersonas</strong>
            </li>
        </ol>*@
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Clientes registrados:</h5>

                    <div class="ibox-tools">
                        @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.per_Identidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_CorreoElectronico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_EstadoCivil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.per_Estado)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.per_Identidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_FechaNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_CorreoElectronico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_EstadoCivil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_RazonInactivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_FechaCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_FechaModifica)
        </td>
        <td>
			@Html.ActionLink("Details", "Details", new { id=item.per_Id }, new { @class = "btn btn-primary btn-sm"})
            @Html.ActionLink("Edit", "Edit", new { id=item.per_Id }, new { @class = "btn btn-white btn-sm"})
            @Html.ActionLink("Delete", "Delete", new { id=item.per_Id }, new { @class = "btn btn-white btn-sm"})
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



