@model Inspinia_MVC5.Models.tbPersonas

@{
    ViewBag.Title = "Details";
}

    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalles</h2>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            @Html.DisplayNameFor(model => model.per_Identidad) @Html.DisplayFor(model => model.per_Identidad)
            <br /><br />
            <div class="ibox float-e-margins">
                <div class="ibox-content">


                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.per_RazonInactivo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.per_RazonInactivo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.per_FechaCrea)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.per_FechaCrea)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.per_FechaModifica)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.per_FechaModifica)
                        </dd>
                    </dl>
                    <hr />
                    <p><b>Nombre de usuario: </b>@ViewBag.cuenta</p>
                    <div class="col-md-4">
                        <p><b>Forografía: </b></p>
                    </div>
                    <div class="col-md-5">
                        <img src="@Url.Action("cargarfoto", "Personas", new { id = @Html.DisplayFor(model => model.per_Id)})" style="width:100%;height:100%" />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
