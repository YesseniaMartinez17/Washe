@model IEnumerable<Inspinia_MVC5.Models.tbPedidos>

@{
    ViewBag.Title = "Pendientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Pedidos pendientes</h2>
        <ol class="breadcrumb">
            @*<li class="active">
                <strong>tbPedidos</strong>
            </li>*@
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Pedidos pendientes</h5>
                </div>
                <div class="ibox-content">

                    <table id="TablaPendientes" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pdidos_Fecha)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pdidos_ubicacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pdidos_Total)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pdidos_Fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pdidos_ubicacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pdidos_Total)
                                    </td>
                                    <td>
                                        <a href="#" class="detallesP btn btn-primary" data-value="@item.pdidos_Id" id="@item.pdidos_Id">Detalles del pedido</a>
                                        @*@Html.ActionLink("Details", "Details", new { id = item.pdidos_Id }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Edit", "Edit", new { id = item.pdidos_Id }, new { @class = "btn btn-white btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.pdidos_Id }, new { @class = "btn btn-white btn-sm" })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->


<div class="modal fade" id="modalDetallePedido" tabindex="-1" role="dialog" aria-labelledby="DetallesPedido" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="contenidoDetalle">

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/Scripts/app/General/Servicios/IndexPendientes")
}


