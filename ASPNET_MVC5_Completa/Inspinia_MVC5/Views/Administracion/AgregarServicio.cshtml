
@{
    ViewBag.Title = "AgregarServicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<style type="text/css">
    input[type="button"] {
        margin-right: 0.5em;
    }

    textarea {
        resize: vertical;
    }

    label {
        display: inline-block;
        text-align: right;
        width: 100%;
    }

    .fa-trash:hover {
        color: red;
    }
</style>

@Html.AntiForgeryToken()
<img id="ocultoimg" style="display:none" src="" width="30px" height="50px">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Registrar servicios.</h2>
        <br />
    </div>
</div>


<div id="" class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="form-group">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label class="col-sm-2 control-label">Título</label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="text" id="titulo" maxlength="50" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="col-sm-2 control-label">Categoría</label>
                                            <div class="col-sm-10">
                                                <select id="selectServicios" class="form-control m-b" name="selectCategoria"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="form-group">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label class="col-sm-2 control-label">Precio: </label>
                                            <div class="col-sm-10">
                                                <div class="input-group">
                                                    <span class="input-group-addon">Lps.</span>
                                                    <input id="precio" type="text" class="money form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                            <label class="col-sm-2 control-label">Fotografía</label>
                                            <div class="col-sm-10">
                                                <div class="fileinput input-group fileinput-new" id="DivFotografia" data-provides="fileinput">
                                                    <div class="form-control" data-trigger="fileinput">
                                                        <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                                        <span class="">Servicio</span>
                                                    </div>
                                                    <span class="input-group-addon btn btn-default btn-file">
                                                        <span id="mensajeFotografia" class="fileinput-new">
                                                            <i class=" fa fa-file-photo-o"></i>
                                                        </span>
                                                        <span class="fileinput-exists">Cambiar</span>

                                                        <input type="file" class="form-control-file" name="fotografia" id="fotografia" style="width: 100%;" required="">
                                                    </span>
                                                    <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remover</a>
                                                </div>
                                            </div>






                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="form-group">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label class="col-sm-2 control-label">Descripción:</label>
                                            <div class="col-sm-10">
                                                <input type="text" maxlength="100" id="descripcion" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-md-1 col-md-offset-5">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="button" id="agregar" class="btn btn-info btn-outline" value="Agregar registro" />
                </div>


                @*Listado de registros*@

                <div class="ibox-content animated fadeInLeft"  id="Insertar" style="display:none">
                    <h1>Registros previos a insertar.</h1>
                    <div class="ibox-content animate fadeIn">
                        <div class="tabs-container">

                            <div class="tabs-left">
                                <ul class="nav nav-tabs" id="listadoRegistros">
                                </ul>
                                <div class="tab-content " id="descripcionesservicios">

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-1">
                                    <button id="btnConfirmar" class="btn btn-success " type="button"><i class="fa fa-database"></i>&nbsp;&nbsp;<span class="bold">Confirmar inserción</span></button>
                                    @*<input type="button" id="btnConfirmar" class="btn btn-outline btn-primary" value=" <i class='fa fa-database'></i> " />*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/plugins/toastrStyles")
}

@section Scripts{
    @Scripts.Render("~/Scripts/plugins/Mask")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/Scripts/app/General/Administracion/AgregarServicio")
    @Scripts.Render("~/plugins/sweetAlert")
}