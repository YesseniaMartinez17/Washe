@model IEnumerable<Inspinia_MVC5.Models.tbServicios>

@{
    ViewBag.Title = "AdministrarSubcategorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    input[type="button"] {
        margin-right: 0.5em;
    }

    textarea {
        resize: vertical;
    }

    label {
        display: inline-block;
        text-align: right;
        width: 100%;
    }
</style>

@Html.AntiForgeryToken()
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Listado de servicios</h2>
        <br />


        @*<ol class="breadcrumb">
                <li class="active">
                    <strong>Servicios:</strong>
                </li>
            </ol>*@
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="form-group">
                                <label style="text-align:right" class="control-label col-sm-2">
                                    <h4>Seleccione la categoría:</h4>
                                </label>
                                <div class="col-md-3">
                                    <select id="selectServicios" class="form-control m-b" name="selectCategoria"></select>
                                </div>
                                <div class="col-md-1 col-lg-offset-5">
                                    <a href="/Administracion/AgregarServicio" class="btn btn-md btn-primary btn-outline">Registrar nuevo</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                Servicio
                            </th>
                            <th>
                                Precio
                            </th>
                            <th>
                                Descripción
                            </th>
                            <th>Acciones</th>
                        </tr>
                        <tbody id="tbSubCategorias"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ModalDetalles" tabindex="-1" role="dialog" aria-labelledby="DetallesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="ContenidoDetalle">
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalModificar" tabindex="-1" role="dialog" aria-labelledby="ModificandoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="ContenidoModificar">
                    <div class="ibox-title">
                        <div>
                            <h1>Modificar registro.</h1>
                            <br /><br />
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Título:</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="tituloModalMod" />
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Imagen:</label>

                                <div class="col-sm-10"><input type="file" name="fotografia" id="fotografia" class="form-control-file" /></div>
                            </div>
                            <br /><br />



                            <div class="form-group">
                                <label class="col-sm-2 control-label">Precio: </label>
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon">Lps.</span>
                                        <input id="precioModalMod" type="text" class="money form-control" />
                                    </div>
                                </div>
                            </div>
                            <br /><br />



                            <div class="form-group">
                                <label class="col-sm-2 control-label">Descripción:</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="descripcionModalMod" rows="5" maxlength="50"></textarea>
                                </div>
                            </div>


                            <div class="form-group">
                                <input type="button" style="margin-top:05%;" id="submitModalMod" class="btn btn-success" value="Confirmar Modificación" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts{
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/Scripts/plugins/Mask")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/Scripts/app/FuncionesGenerales")
    @Scripts.Render("~/Scripts/app/General/SubCategorias")
}