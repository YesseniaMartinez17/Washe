@model Inspinia_MVC5.Models.tbSuscripciones

@{
    ViewBag.Title = "Suscripciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.AntiForgeryToken()
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Suscripciones</h2>
        <br />


        @*<ol class="breadcrumb">
                <li class="active">
                    <strong>Servicios:</strong>
                </li>
            </ol>*@
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-12 ">
                            <div class="form-group">
                                <label style="text-align:right" class="control-label col-sm-2">
                                    <h4>Listado de suscripciones:</h4>
                                </label>
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-1 col-lg-offset-5">
                                    <a href="#" id="AgregarSuscripción" class="btn btn-md btn-primary btn-outline">Registrar nuevo</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                Estado
                            </th>
                            <th>
                                Suscripción
                            </th>
                            <th>
                                Servicio
                            </th>
                            <th>
                                Precio
                            </th>
                            @*<th>
                                    Vigencia(Meses)
                                </th>
                                <th>
                                    (Max)Peticiones mensuales
                                </th>*@
                            <th>Acciones</th>
                        </tr>
                        <tbody id="tbSuscripciones"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@*<style type="text/css">
        div #ModalAgregar label {
            width:auto;
            display:block;
            float: right;
        }
    </style>*@

<div class="modal fade" id="ModalAgregar" tabindex="-1" role="dialog" aria-labelledby="AgregarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="ContenidoAgregar">
                    <br />
                    <div class="ibox-title">
                        <h1>Agregar suscripción</h1>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-5 control-label text-right">Descripción:</label>
                        <div class="col-sm-7">
                            <input required="required" class="form-control" type="text" id="DescripcionAgregar" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-5 control-label  text-right">Precio:</label>
                        <div class="col-sm-7 ">
                            <input required="required" class="form-control money" type="text" id="precioAgregar" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-5 control-label text-right">Vígencia maxima(mensual):</label>
                        <div class="col-sm-7">
                            <input required="required" class="form-control nmbrentero" type="number" id="vigenciaAgregar" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-5 control-label text-right">Servicio:</label>
                        <div class="col-sm-7">
                            <select id="SelectServicioAgregar" class="form-control m-b" name="SelectServicioAgregar"></select>
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-8 control-label text-right">Cántidad maxima de solicitudes mensuales:</label>
                        <div class="col-sm-4">
                            <input required="required" class="form-control nmbrentero" type="number" id="solicitudesAgregar" />
                        </div>
                    </div>
                    <br /><br />
                    <input class="btn btn-primary" id="agregarSuscripcion" value="Agregar" type="submit" />
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ModalDetalles" tabindex="-1" role="dialog" aria-labelledby="AgregarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="ContenidoDetalles">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalModificar" tabindex="-1" role="dialog" aria-labelledby="ModificarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="ContenidoModificar">
                    <br />
                    <div class="ibox-title">
                        <h1>Modificar suscripción</h1>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-5 control-label text-right">Descripción:</label>
                        <div class="col-sm-7">
                            <input required="required" class="form-control" type="text" id="DescripcionModificar" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-5 control-label  text-right">Precio:</label>
                        <div class="col-sm-7 ">
                            <input required="required" class="form-control money" type="text" id="precioModificar" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-5 control-label text-right">Vígencia maxima(mensual):</label>
                        <div class="col-sm-7">
                            <input required="required" class="form-control nmbrentero" type="number" id="vigenciaModificar" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-8 control-label text-right">Cántidad maxima de solicitudes mensuales:</label>
                        <div class="col-sm-4">
                            <input required="required" class="form-control nmbrentero" type="number" id="solicitudesModificar" />
                        </div>
                    </div>
                    <br /><br />
                    <input class="btn btn-primary" id="modificarSuscripcion" value="Confirmar modificación" type="submit" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts{
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/Scripts/plugins/Mask")
    @Scripts.Render("~/Scripts/app/FuncionesGenerales")
    @Scripts.Render("~/Scripts/app/General/Administracion/Suscripciones")
}